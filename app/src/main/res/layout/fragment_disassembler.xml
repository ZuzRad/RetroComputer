<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    tools:context=".DisassemblerFragment">

    <TextView
        android:id="@+id/textView_main_emul"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:textSize="13sp"
        android:gravity="left|top"
        android:background="@color/codeBackground"
        android:text="@string/hello_blank_fragment"
        app:layout_constraintBottom_toTopOf="@+id/butt_switch1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_first_line"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/codeBackground"
        android:text="first line of code"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_second_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/textView_second_line"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/codeBackground"
        android:text="second line of code"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/butt_reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/butt_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:text="Step"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/butt_reset"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/butt_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset"
        android:layout_marginBottom="5dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/butt_irq"
        app:layout_constraintStart_toEndOf="@+id/butt_space" />

    <Button
        android:id="@+id/butt_irq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="irq"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/butt_nmi"
        app:layout_constraintStart_toEndOf="@+id/butt_reset" />

    <Button
        android:id="@+id/butt_nmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:text="nmi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/butt_irq" />

    <Button
        android:id="@+id/butt_switch1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:text="ASCII"

        app:layout_constraintBottom_toTopOf="@+id/textView_first_line"
        app:layout_constraintEnd_toStartOf="@+id/butt_switch2"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/butt_switch2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:text="RAM"

        app:layout_constraintBottom_toTopOf="@+id/textView_first_line"
        app:layout_constraintEnd_toStartOf="@id/butt_switch3"
        app:layout_constraintStart_toEndOf="@+id/butt_switch1"
        />

    <Button
        android:id="@+id/butt_switch3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:text="ROM"

        app:layout_constraintBottom_toTopOf="@+id/textView_first_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/butt_switch2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>